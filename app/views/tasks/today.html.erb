<h1>Today's Tasks</h1>
<%= Date.today %>
<% if @tasks.length == 0 %>
	<div class="box">
		<h2>No tasks for today yet.</h2>
	</div>
<% end %>
<%= render @tasks %>
<div class="box">
	<%= link_to 'Categories', categories_path %>
</div>
<div class="box">
	<%= link_to 'All Tasks', tasks_path %>
</div>
<p id="notice"><%= notice %></p>
