	<h2><%= @task.name %></h2>
	<table>
		<thead>
			<tr>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>Category:</td>
				<td><%= @category.name %></td>
			</tr>
			<tr>
				<td>Details:</td>
				<td><%= @task.details %></td>
			</tr>
