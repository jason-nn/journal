<div class="box">
	<h2>Categories</h2>
	<table>
		<thead>
			<tr>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @categories.each do |category| %>
				<tr>
					<td><%= category.name %></td>
					<td><%= link_to 'Show', category %></td>
					<td>
						<%= link_to 'Destroy', category, method: :delete, data: {
                    	confirm: 'Are you sure? This will delete all tasks under this category.' } %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<%= link_to 'New Category', new_category_path, :class => "redirect" %>
<%= link_to 'Back', root_path, :class => "redirect" %>
<% if notice %>
	<div class="notice"><%= notice %></div>
<% end %>
