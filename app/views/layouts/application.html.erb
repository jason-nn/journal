<!DOCTYPE html>
<html>
	<head>
		<title>Journal</title>
		<meta name='viewport' content='width=device-width,initial-scale=1'>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>
	<body>
    <div class='navbar'>
      <div class='navleft'>
        <img src='/journaldown.svg' alt='logo' class='navlogo' />
        <div class='navlefttext'>
          journal. 
          <% if user_signed_in? %>
            <span>for <%= current_user.email %></span>
          <% else %>
            <span style='color: white;'>.</span>
          <% end %>
        </div>
      </div>
      <div class='navright'>
      <%= link_to 'Today\'s Tasks', root_path, :class => 'navlink' %>
      <%= link_to 'All Tasks', tasks_path, :class => 'navlink' %>
      <%= link_to 'Categories', categories_path, :class => 'navlink' %>
      <% if user_signed_in? %>
        <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, :class => 'signout' %>
      <% end %>
      </div>
    </div>

    <div class='main'>
      <%= yield %>
    </div>

    <% if notice %>
      <div class='notice'><%= notice %></div>
    <% end %>
    <% if alert %>
      <div class='alert'><%= alert %></div>
    <% end %>
	</body>
</html>
